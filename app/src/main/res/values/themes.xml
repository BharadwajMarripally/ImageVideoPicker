<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ImageVideoPicker" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="behavior_fitToContents">true</item>
    </style>

    <style name="DialogAnimation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_to_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_16_top_bg_white</item>
        <item name="behavior_peekHeight">@dimen/padding_400</item>
    </style>
</resources>